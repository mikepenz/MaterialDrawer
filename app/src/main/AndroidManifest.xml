<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mikepenz.materialdrawer.app">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher">
        <activity
            android:name=".SimpleHeaderDrawerActivity"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleCompactHeaderDrawerActivity"
            android:theme="@style/CustomTheme"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".ActionBarDrawerActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/MaterialDrawerTheme.ActionBar"/>
        <activity android:name=".SimpleNonTranslucentDrawerActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/MaterialDrawerTheme"/>
        <activity android:name=".MultiDrawerActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/MaterialDrawerTheme.TranslucentStatus"/>
        <activity android:name=".ComplexHeaderDrawerActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/MaterialDrawerTheme.TranslucentStatus"/>
    </application>

</manifest>
